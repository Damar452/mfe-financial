{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true, // Permite importar m√≥dulos CommonJS
    "strict": true,
    "jsx": "react-jsx",
    "declarationDir": "dist"
  },
  "files": ["src/team-react-mf-react.tsx"],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*", "dist", "**/*.test.tsx", "**/*.spec.tsx"]
}
